package PapaPong;

import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.Rectangle;
import java.io.FileInputStream;
import java.io.InputStream;

public class Ball {
	public static final int ballDiameter = 30;
	private static final int originalXSpeed = 1;
	private static final int originalYSpeed = 1;
	public int ballX = 380;
	public int ballY = 380;
	public int xSpeed = 1;
	public int ySpeed = 1;
	private int wallWidth = 20;
	boolean still = false;
	private Dimension dimension = new Dimension(this.getClass());
	private Game game;
	public boolean gameOver; // In game/glass

	public Ball(Game game) {
		this.game = game;
	}

	public void newGame() {
		ballX = 380;
		ballY = 380;
		xSpeed = originalXSpeed;
		ySpeed = originalYSpeed;
		gameOver = false;
	}

	public void move() {
		// System.out.println(ballX + " , " + ballY);
		wallCollision();
		racquetCollision();
		goal();
		ballX = ballX + xSpeed;
		ballY = ballY + ySpeed;
		// gameOver = true;
		// game.gameOver();
	}

	public int getX() {
		return ballX;
	}

	public int getY() {
		return ballY;
	}

	private boolean collision() {
		return game.racquet.getBounds().intersects(getBounds());
	}

	private boolean comCollision() {
		return game.comPaddle.getBounds().intersects(getBounds());
	}

	public void paint(Graphics2D g) {
		// TEMPORARY - Ball position
		g.setColor(Color.BLACK);
		if (!still) {
			g.drawString(ballX + "," + ballY, ballX - 10, ballY - 10);
		} else {
			g.drawString(ballX + "," + ballY, 200, 200);
		}
		g.setColor(Color.YELLOW);
		g.fillOval(ballX, ballY, ballDiameter, ballDiameter);
	}

	public Rectangle getBounds() {
		return new Rectangle(ballX, ballY, ballDiameter, ballDiameter);
	}

	private void bounce() {
		if (ballX < game.racquet.x + game.racquet.getWidth() / 2) {
			if (xSpeed < 0) {
				xSpeed *= -1;
			}
		} else if (ballX > game.racquet.x + game.racquet.getWidth() / 2) {
			if (xSpeed > 0) {
				xSpeed *= -1;
			}
		} else if (ballX == game.racquet.getWidth() / 2) {
			xSpeed = 0;
		}
		ySpeed *= -1;
	}

	private void goal() {
		if (game.goal.inComGoalX()) {
			if (ballY + ySpeed < 0) {
				ySpeed = Math.abs(ySpeed);
			}
		} else { // Top wall bounce
			if (ballY + ySpeed < wallWidth) {
				ySpeed = Math.abs(ySpeed);
			}
		}
		if (game.goal.inUserGoalX()) {
			if (ballY + ySpeed > game.getHeight() - ballDiameter) {
				ySpeed *= -1;
			}
		} else { // Bottom wall bounce
			if (ballY + ySpeed > game.getHeight() - ballDiameter - wallWidth) {
				ySpeed *= -1;
			}
		}
	}

	private void racquetCollision() {
		if (collision()) {
			bounce();
		}
		if (comCollision()) {
			ySpeed *= -1;
		}
	}

	private void wallCollision() {
		if (ballX + xSpeed < wallWidth
				|| ballX + xSpeed > game.getWidth() - ballDiameter - wallWidth) {
			if (xSpeed != 0) {
				xSpeed *= -1;
			} else {
				xSpeed = originalXSpeed;
			}
		}

		if (ballX + xSpeed > game.getWidth() - ballDiameter - wallWidth) {
			still = true;
		}
	}
	
	public void playBounceSound() {

	}

}

