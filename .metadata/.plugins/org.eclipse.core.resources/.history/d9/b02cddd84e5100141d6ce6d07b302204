package PapaPong;

import java.awt.Color;
import java.awt.Graphics2D;

public class Aimer {

	private Game game;

	public Aimer(Game game) {
		this.game = game;
	}

	public void paint(Graphics2D g) {
		int meetingPointX = 0;
		int meetingPointY = 0;
		g.setColor(Color.MAGENTA);
		g.drawRect(game.racquet.x, game.racquet.y, game.racquet.WIDTH, game.racquet.HEIGHT);
		g.drawLine(game.ball.ballX, game.ball.ballY, meetingPointX, meetingPointY);
		g.drawLine(game.comPaddle.getComX(), game.comPaddle.getComY(),
				meetingPointX, meetingPointY);
	}

}
