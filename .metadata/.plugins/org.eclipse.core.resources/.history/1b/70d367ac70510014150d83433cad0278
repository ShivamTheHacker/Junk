package Book;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class BookWord {

	public static void main(String[] args) {
		BufferedReader br = null;

		try {

			String sCurrentLine;
			char[] screwball = { 's', 'c', 'r', 'e', 'w', 'b', 'a', 'l', 'l' };
			char[] phony = { 'p', 'h', 'o', 'n', 'y' };
			char[] pervert = { 'p', 'e', 'r', 'v', 'e', 'r', 't' };

			br = new BufferedReader(new FileReader(
					"/Users/Shivam/Downloads/TheCatcherText.txt"));

			while ((sCurrentLine = br.readLine()) != null) {
				char[] currentLine = sCurrentLine.toCharArray();
				for (int i = 0; i < currentLine.length; i++) {
					if (currentLine[i] == screwball[0]) {
						int count = 0;
						for (int j = 0; j < screwball.length; j++) {
							if (i + j <= currentLine.length) {
								if (currentLine[i + j] == screwball[j]) {
									count++;
									System.out.println("Screwball found at: ");
								}
							} else {
								break;
							}
							if (count == screwball.length) {
								break;
							}
						}
					}
				}
				System.out.println(sCurrentLine);
			}

		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				if (br != null)
					br.close();
			} catch (IOException ex) {
				ex.printStackTrace();
			}
		}

	}
}
